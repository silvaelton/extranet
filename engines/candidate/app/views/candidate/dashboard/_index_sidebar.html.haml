#sidebar
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Filtro
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body
      = simple_form_for url_for, method: :get, remote: true do |f|
        = f.input :by_cpf, as: :string, label: "Por CPF", input_html: { class: 'cpf', name: :by_cpf, value: params[:by_cpf]}
        = f.input :by_name, as: :string, label: "Por nome"
        = f.input :by_cadastre_situation_id, as: :select, label: "Por situacação cadastral", include_blank: t(:include_blank)
        = f.input :by_cadastre_procedural_id, as: :select, label: "Por situação processual", include_blank: t(:include_blank)
        = f.input :by_convocation_id, as: :select, label: "Por convocação", include_blank: t(:include_blank)
        = f.input :by_program_id, as: :select, label: "Por lista", include_blank: t(:include_blank)
        .mt-4
        = f.submit "Filtrar", name: nil, class: 'btn btn-primary btn-block'
        = link_to "Limpar", url_for, class: 'btn btn-dark btn-block'
  .divider
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Operações
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body.card-list
      = link_to "Gestão de convocações", helpdesk.new_ticket_path, remote: true
      = link_to "Gestão de sorteios", helpdesk.new_ticket_path, remote: true
      %hr.divider
      = link_to "Gestão de situação cadastral", entity.cadastre_situations_path
      = link_to "Gestão de situação processual", entity.cadastre_situations_path
      = link_to "Gestão de listas", entity.cadastre_situations_path
      