.modal-dialog.modal-lg
  .modal-content
    .modal-header
      %h5.modal-title Detalhamento de Herdeiro
      %a.close
        %i.fas.fa-times
    .modal-body
      %table.table.table-bordered.table-striped.table-celled
        %thead
          %tr
            %th{colspan: 3} Nome
            %th CPF
        %tbody
          %tr
            %td{colspan: 3}= @cadastre_inheritor.name
            %td= @cadastre_inheritor.cpf
        %thead
          %tr
            %th Nome de solteiro(a)
            %th Data de Nascimento
            %th Rg
            %th Sexo
        %tbody
          %tr
            %td= @cadastre_inheritor.single_name
            %td= @cadastre_inheritor.born.format_date rescue t(:no_info)
            %td= @cadastre_inheritor.rg
            %td= @cadastre_inheritor.gender.name rescue t(:no_info)
        %thead
          %tr
            %th Estado civil
            %th Espólio?
            %th Porcentagem
            %th Cidade de Nascimento
        %tbody
          %tr
            %td= @cadastre_inheritor.civil_state.name rescue t(:no_info)
            %td= @cadastre_inheritor.estate? ? "Sim" : "Não"
            %td= @cadastre_inheritor.percentage
            %td= @cadastre_inheritor.place_birth
