= simple_form_for [@cadastre, @indication_unitary], remote: true do |f|
  .row
    .col-12
      = f.input :enterprise_id, collection: Address::Enterprise.status_active, include_blank: 'Selecione...'
    .col-12
      = f.input :justify, placeholder: 'Digite uma justificativa'

  %hr.divider
  .row
    .col-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with) }