= simple_form_for [@cadastre, @send_email], remote: true do |f|
  .row
    .col-6
      = f.input :title, placeholder: 'Digite o titulo'
    .col-6
      = f.input :from, placeholder: 'Digite o remetente'
  
  .row
    .col-12
      = f.input :content,as: :text, input_html:{rows: 5, cols: 5}

  %hr.divider
  .row
    .col-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with) }