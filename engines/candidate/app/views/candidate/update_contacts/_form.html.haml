= simple_form_for [@update_contact], remote: true do |f|
  .row
    .col-4
      = f.input :cep, as: :string, placeholder: 'Digite o CEP'
    .col-4 
      = f.input :city_id, collection: Support::Common::City.all, include_blank: 'Selecione...'
    .col-4 
      = f.input :state_id, collection: Support::Common::State.all, include_blank: 'Selecione...'
  .row
    .col-6
      = f.input :address, as: :string, placeholder: 'Digite o endere√ßo'
    .col-3
      = f.input :address_complement, as: :string, placeholder: 'Digite o complemento'
    .col-3
      = f.input :telephone, as: :string, placeholder: 'Digite o telefone'
  .row
    .col-6 
      = f.input :email, as: :string, placeholder: 'Digite o e-mail'
    .col-3
      = f.input :telephone_optional, as: :string, placeholder: 'Digite o telefone(Opcional)'
    .col-3
      = f.input :celphone, as: :string, placeholder: 'Digite o celular'

  %hr.divider
  .row
    .col-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with) }