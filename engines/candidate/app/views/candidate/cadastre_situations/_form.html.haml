= simple_form_for [@cadastre, @cadastre_situation], remote: true do |f|
  .row
    .col-6
      = f.input :situation_type_id, as: :select, collection: Candidate::SituationType.status_active, include_blank: 'Selecione...'
    .col-6 
      = f.input :process_number, placeholder: 'Digite o número do processo'
  .row
    .col-4 
      = f.input :computer, as: :select, include_blank: 'Selecione...'
    .col-4 
      = f.input :subscribe_id
    .col-4 
      = f.input :process_sei, placeholder: 'Digite o processo do SEI'
  .row
    .col-12 
      = f.input :observation, placeholder: 'Digite uma observação'
  .divider-sm
  .row
    .col-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with) }