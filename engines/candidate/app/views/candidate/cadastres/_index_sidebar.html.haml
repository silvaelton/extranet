#sidebar
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Filtro
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body
      = simple_form_for url_for, method: :get, remote: true do |f|
        = f.input :by_cpf, as: :string, label: "Por CPF", input_html: { class: 'cpf', name: :by_cpf, value: params[:by_cpf]}
        = f.input :by_name, as: :string, label: "Por nome"
        .mt-4
        = f.submit "Filtrar", name: nil, class: 'btn btn-primary btn-block', data: { disable_with: t(:disable_with)} 
        = link_to "Limpar", url_for, class: 'btn btn-dark btn-block' 
  .divider
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Operações
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body.card-list
      = link_to "Gestão de convocações", candidate.convocations_path
      = link_to "Gestão de situação cadastral", candidate.situation_types_path
      = link_to "Gestão de listas", candidate.lists_path
      = link_to "Gestão de programas", candidate.programs_path
      