.card
  .card-body.card-header.border-left-yellow
    .card-title 
      = link_to "javascript:void(0)", class: "collapsing-content-link" do
        4. Situação cadastral (#{@cadastre.cadastre_situations.count})
  .card-body.situation-display{style: 'display: none'}  
    .row
      .col-md-12
        %h5 
        = link_to "Adicionar situação", new_cadastre_cadastre_situation_path(@cadastre), remote: true, data: { disable_with: t(:disable_with)}
        %table.table.table-bordered.table-striped
          %thead
            %tr
              %th Situação
              %th Usuário
              %th Observação
              %th
          %tbody
            - if @cadastre.cadastre_situations.present? 
              - @cadastre.cadastre_situations.order(created_at: :desc).each do |cadastre_situation|
                %tr{class: "row-cadastre-situation-#{cadastre_situation.id}"}
                  %td= cadastre_situation.situation_type.name
                  %td= cadastre_situation.user.name
                  %td.collapsing= cadastre_situation.observation
                  %td.collapsing
                    = link_to "<i class='fa fa-pencil'></i>".html_safe, candidate.edit_cadastre_cadastre_situation_path(@cadastre, cadastre_situation), remote: true, class: 'btn btn-info btn-icon btn-sm', data: { disable_with: t(:disable_with)}
                    = link_to "<i class='fa fa-trash'></i>".html_safe, candidate.cadastre_cadastre_situation_path(@cadastre, cadastre_situation), method: :delete, remote: true, class: 'btn btn-danger btn-icon btn-sm', data: { confirm: t(:confirm)}
            - else
              %tr
                %td{colspan: 3}
                  Nenhum assunto registrado.