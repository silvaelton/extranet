.card
  .card-body.card-header.border-left-yellow
    .card-title 
      = link_to "javascript:void(0)", class: "collapsing-content-link" do
        3. Herdeiro (#{@cadastre.cadastre_inheritors.count})
  .card-body.inheritor-display{style: 'display: none'}  
    .row
      .col-md-12 
        %h5 
        = link_to "Adicionar herdeiro", new_cadastre_cadastre_inheritor_path(@cadastre), remote: true, data: { disable_with: t(:disable_with)}
        %table.table.table-bordered.table-striped
          %thead
            %tr
              %th Nome
              %th Cpf
              %th Observação
              %th Status
              %th
          %tbody
            - if @cadastre.cadastre_inheritors.present? 
              - @cadastre.cadastre_inheritors.order(created_at: :desc).each do |cadastre_inheritor|
                %tr{class: "row-cadastre-inheritor-#{cadastre_inheritor.id}"}
                  %td= cadastre_inheritor.name
                  %td= cadastre_inheritor.cpf
                  %td= cadastre_inheritor.observation
                  %td.collapsing= cadastre_inheritor.estate ? 'Ativo' : 'Inativo'
                  %td.collapsing
                    = link_to "<i class='fa fa-pencil'></i>".html_safe, candidate.edit_cadastre_cadastre_inheritor_path(@cadastre, cadastre_inheritor), remote: true, class: 'btn btn-info btn-icon btn-sm', data: { disable_with: t(:disable_with)}
                    = link_to "<i class='fa fa-trash'></i>".html_safe, candidate.cadastre_cadastre_inheritor_path(@cadastre, cadastre_inheritor), method: :delete, remote: true, class: 'btn btn-danger btn-icon btn-sm', data: { confirm: t(:confirm)}
            - else
              %tr
                %td{colspan: 3}
                  Nenhum assunto registrado.