#sidebar
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Filtro
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body
      = simple_form_for url_for, method: :get, remote: true do |f|
        = f.input :by_name, as: :string, label: "Por nome", input_html: {  name: :by_name, value: params[:by_name]}
        = f.input :by_publish, as: :select, label: "Por publicado?", input_html: { name: :by_publish, value: params[:by_publish]}
        .mt-4
        = f.submit "Filtrar", name: nil, class: 'btn btn-primary btn-block'
        = link_to "Limpar", url_for, class: 'btn btn-dark btn-block'
  .divider
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Operações
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body.card-list
      = link_to "Adicionar postagem", cms.new_post_path
      %hr/
      = link_to "Gestão de tipos",cms.post_category_types_path
      = link_to "Gestão de categoria",cms.post_categories_path