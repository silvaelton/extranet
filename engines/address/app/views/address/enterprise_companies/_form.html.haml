= simple_form_for @enterprise_company, remote: true do |f|
  .row
    .col-6 
      = f.input :name, as: :string, placeholder: 'Digite o nome'
    .col-3
      = f.input :fantasy_name, as: :string, placeholder: 'Digite a sigla'
    .col-3 
      = f.input :status, as: :select, include_blank: 'Selecione...'
  
  .row
    .col-3
      = f.input :cnpj, input_html: {class: 'cnpj'}
    .col-3 
      = f.input :telephone, placeholder: 'Digite telefone'
    .col-3 
      = f.input :email, as: :string, placeholder: 'Digite o e-mail'  
    .col-3 
      = f.input :access_allow, as: :select, include_blank: 'Selecione...'

  .row
    .col-6 
      = f.input :address, as: :string, placeholder: 'Digite o endereço'
    .col-3 
      = f.input :city_id, collection: Support::Common::City.all, include_blank: 'Selecione...'
    .col-3
      = f.input :state_id, collection: Support::Common::State.all, include_blank: 'Selecione...'
  
  .row
    .col-12
      = f.input :description, placeholder: 'Digite uma descrição'
  %hr.divider
  .row
    .col-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with) }