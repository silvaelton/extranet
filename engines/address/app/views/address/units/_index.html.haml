.card
  .card-body.card-header.border-left-yellow
    .card-title
      Listando (#{@units.count rescue 0}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'
  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th #
          %th Cidade
          %th EndereÃ§o
          %th
      %tbody
        - if @units.present?
          - @units.each_with_index do |unit, i|
            %tr{class: "row-type-#{unit.id}"}
              %td= i + 1
              %td= unit.city.name rescue t(:no_info)
              %td= unit.complete_address rescue t(:no_info)
              %td.collapsing
                .dropdown
                  %button.btn.btn-success.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %i.fa.fa-cog
                    %i.ti-angle-down
                  .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                    = link_to "Visulizar", unit_path(unit), class: 'dropdown-item'
                    = link_to "Editar", edit_unit_path(unit), class: 'dropdown-item', remote: true
                    = link_to "Excluir", unit_path(unit), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
          %tfoot
            %tr
              %td.text-center{colspan: 3}
                = pagy_bootstrap_nav(@pagy).html_safe
