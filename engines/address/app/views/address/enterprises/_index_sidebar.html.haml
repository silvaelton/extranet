#sidebar
  .card
    .card-body.card-header.border-left-yellow
      .card-title
        Filtro
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body
      = simple_form_for url_for, method: :get, remote: true do |f|
        = f.input :by_name, as: :string, label: "Por nome", input_html: {  name: :by_name, value: params[:by_name]}
        = f.input :by_edital, as: :string, label: "Por edital", input_html: { name: :by_acron, value: params[:by_edital] }
        = f.input :by_process, as: :string, label: "Por processo", input_html: { name: :by_acron, value: params[:by_process] }
        = f.input :by_status, as: :select, label: "Por situação", input_html: { name: :by_acron, value: params[:by_status] }, prompt: 'Ativo?'
        = f.input :by_company, collection: Address::EnterpriseCompany.all, label: "Por empresa", input_html: { name: :by_company }, prompt: 'Selecione'
        .mt-4
        = f.submit "Filtrar", name: nil, class: 'btn btn-primary btn-block', remote: true
        = link_to "Limpar", url_for, class: 'btn btn-dark btn-block'
  .divider
  .card
    .card-body.card-header.border-left-yellow
      .card-title
        Operações
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body.card-list
      = link_to "Adicionar empreendimento", address.new_enterprise_path, remote: true
      %hr/
      = link_to "Gestão de empresas", address.enterprise_companies_path, remote: true
