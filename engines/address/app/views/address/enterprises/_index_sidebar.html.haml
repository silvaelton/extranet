#sidebar
  .card
    .card-body.card-header.border-left-yellow
      .card-title
        Filtro
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body
      = simple_form_for url_for, method: :get, remote: true do |f|
        = f.input :by_name, as: :string, label: "Por nome", selected: params[:by_name], include_blank: t(:include_blank), input_html: { onchange: "Rails.fire(this.form, 'submit');", name: 'by_name'}, placeholder: 'Digite o nome'
        = f.input :by_edital, as: :string, label: "Por edital", selected: params[:by_edital], include_blank: t(:include_blank), input_html: { onchange: "Rails.fire(this.form, 'submit');", name: 'by_edital'}, placeholder: 'Digite o edital'
        = f.input :by_process, as: :string, label: "Por processo", selected: params[:by_process], include_blank: t(:include_blank), input_html: { onchange: "Rails.fire(this.form, 'submit');", name: 'by_process'}, placeholder: 'Digite o processo'
        = f.input :by_status, as: :select, label: "Por situação", selected: params[:by_status], include_blank: t(:include_blank), input_html: { onchange: "Rails.fire(this.form, 'submit');", name: 'by_status'}
        = f.input :by_company, collection: Address::EnterpriseCompany.all, label: "Por empresa", selected: params[:by_company], include_blank: t(:include_blank), input_html: { onchange: "Rails.fire(this.form, 'submit');", name: 'by_company'}
        .mt-4
        = f.submit "Filtrar", name: nil, class: 'btn btn-primary btn-block', remote: true
        = link_to "Limpar", url_for, class: 'btn btn-dark btn-block'
  .divider
  .card
    .card-body.card-header.border-left-yellow
      .card-title
        Operações
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body.card-list
      = link_to "Adicionar empreendimento", address.new_enterprise_path, remote: true
      %hr/
      = link_to "Gestão de empresas", address.enterprise_companies_path, remote: true
