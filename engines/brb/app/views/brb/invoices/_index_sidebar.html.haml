#sidebar
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Filtro
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus  
    .card-body
       = simple_form_for url_for, method: :get, remote: true do |f|
        = f.input :by_name, label: "Nome"
        = f.input :by_cpf, label: "CPF", input_class: { class: 'cpf' }
        = f.input :by_type, as: :select, collection: Brb::InvoiceType.all, label: "Tipo", include_blank: t(:include_blank)
        = f.input :by_category, as: :select, collection: Brb::Category.all, label: "Categoria", include_blank: t(:include_blank)
        .mt-4
        = f.submit "Filtrar", name: nil, class: 'btn btn-success btn-block'
  .divider
    .card
      .card-body.card-header.border-left-yellow
        .card-title 
          Operações
          = link_to "javascript:void(0)", class: "collapsing-link" do
            %i.fa.fa-minus
      .card-body.card-list
        = link_to "Adicionar tipo de boleto", new_invoice_type_path, class: 'filter-nav-item',  remote: true
        = link_to "Gestão de boletos", invoices_path, class: 'filter-nav-item'
        = link_to "Gestão de categorias", categories_path	 , class: 'filter-nav-item'
        = link_to "Gestão de tipos", invoice_types_path, class: 'filter-nav-item'
        = link_to "Gestão de situações", invoice_situations_path, class: 'filter-nav-item'