#sidebar
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Filtro
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus  
    .card-body
      = simple_form_for url_for, method: :get, remote: true do |f|
        = f.input :by_name, label: "Por nome",  placeholder: 'Digite o nome'
        = f.input :by_status, as: :select,label: "Por stauts", include_blank: t(:include_blank)
        = f.input :by_type,as: :select, collection: Brb::InvoiceType.all, label: "Por tipo de boleto", include_blank: t(:include_blank)
        .mt-4
          = f.submit "Filtrar", name: nil, class: 'btn btn-primary btn-block'
  .divider
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Operações
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body.card-list
      = link_to "Adicionar categoria", new_category_path, class: 'filter-nav-item', remote: true
      = link_to "Gestão de boletos", invoices_path, class: 'filter-nav-item'
      = link_to "Gestão de categorias", categories_path	 , class: 'filter-nav-item'
      = link_to "Gestão de tipos", invoice_types_path, class: 'filter-nav-item'
      = link_to "Gestão de situações", invoice_situations_path, class: 'filter-nav-item'