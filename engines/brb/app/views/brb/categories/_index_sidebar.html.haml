.card.filter-sidebar
  #card
    .card-heading.custom-border-left.bottom
      .card-title 
        Filtro
        = link_to "javascript:void(0)", class: "float-right arrow-collapsing" do
          %i.fa.fa-minus  
    .card-block
      .row
        .col-md-12
          = simple_form_for url_for, method: :get, remote: true do |f|
            %ul
              %li
                = f.input :by_name, label: "Por nome", include_blank: t(:include_blank)
              %li
                = f.input :by_status, as: :select,label: "Por stauts", include_blank: t(:include_blank)
              %li
                = f.input :by_type,as: :select, collection: Brb::InvoiceType.all, label: "Por tipo de boleto", include_blank: t(:include_blank)
              %li
                = f.submit "Filtrar", name: nil, class: 'btn btn-success btn-block'
  #card    
    .card-heading.custom-border-left.border
      .card-title 
        Operações
        = link_to "javascript:void(0)", class: "float-right arrow-collapsing" do
          %i.fa.fa-minus  
    .card-block
      .row
        .col-md-12        
          %ul
            %li
              %span= link_to "Adicionar nova categoria", new_category_path, class: 'filter-nav-item', remote: true
  #card           
    .card-heading.custom-border-left.border
      .card-title 
        Menu rápido
        = link_to "javascript:void(0)", class: "float-right arrow-collapsing" do
          %i.fa.fa-minus  
    .card-block
      .row
        .col-md-12        
          %ul
            %li
              %span= link_to "Gestão de boletos", invoices_path, class: 'filter-nav-item'
            %li
              %span= link_to "Gestão de categorias", categories_path	 , class: 'filter-nav-item'
            %li
              %span= link_to "Gestão de tipos de boleto", invoice_types_path, class: 'filter-nav-item'