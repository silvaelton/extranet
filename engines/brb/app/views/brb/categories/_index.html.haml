.card
  .card-body.card-header.border-left-yellow
    .card-title 
      Listando (#{@categories.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'

  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th NÂº
          %th Nome
          %th Tipo
          %th Status
          %th
      %tbody
        - if @categories.present?
          -@categories.each do |category|
            %tr
              %td.collapsing= category.id
              %td= category.name
              %td= category.invoice_type.name rescue nil
              %td.collapsing= category.status? ? "Ativo" : "Inativo"
              %td.collapsing
                .dropdown
                  %button.btn.btn-success.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %i.fa.fa-cog
                    %i.ti-angle-down
                  .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                    = link_to "Excluir", category_path(category), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
                    = link_to "Editar", edit_category_path(category), class: 'dropdown-item', remote: true
          %tfoot
            %tr
              %td.text-center{colspan: 6}
                = pagy_bootstrap_nav(@pagy).html_safe
        - else
          %tr
            %td{colspan: 6}
              %i Nenhuma categoria registrada.