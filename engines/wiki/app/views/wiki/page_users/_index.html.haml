.row
  .col-md-12
    %h5 
      %b Usuários (#{@topic.page_users.count})
    %h6
      = link_to "<i class='fa fa-plus'></i>".html_safe, new_topic_page_user_path(@topic), remote: true, data: { disable_with: t(:disable_with)}
      Usuários
    %table.table.table-bordered.table-striped
      %thead
        %tr
          %td Usuário
          %td 
      %tbody
        - if @topic.page_users.present? 
          - @topic.page_users.each do |page_user|
            %tr{class: "row-page-user-#{page_user.id}"}
              %td= page_user.staff.name
              %td.collapsing
                = link_to "<i class='fa fa-trash'></i>".html_safe, wiki.topic_page_user_path(@topic, page_user), method: :delete, remote: true, class: 'btn btn-danger btn-icon btn-sm', data: { confirm: t(:confirm)}
        - else
          %tr
            %td{colspan: 3}
              Nenhum usuário vínculado.