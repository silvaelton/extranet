.card
  .card-body.card-header.border-left-yellow
    .card-title 
      Listando (#{@jobs.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'

  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th Nº 
          %th Nome
          %th Código
          %th Salário
          %th Código da função
          %th Status
          %th
      %tbody
        - if @jobs.present?
          -@jobs.order(:name).each do |job|
            %tr{class: "row-job-#{job.id}"}
              %td.collapsing= job.id
              %td= job.name
              %td= job.code
              %td= job.salary
              %td= job.function_code
              %td.collapsing= job.status
              %td.collapsing
                .dropdown
                  %button.btn.btn-success.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %i.fa.fa-cog
                    %i.ti-angle-down
                  .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                    = link_to "Excluir", job_path(job), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
                    = link_to "Editar", edit_job_path(job), class: 'dropdown-item', remote: true
          %tfoot
            %tr
              %td.text-center{colspan: 6}
                = pagy_bootstrap_nav(@pagy).html_safe
                
        - else
          %tr
            %td{colspan: 6}
              %i Nenhum cargo registrado.