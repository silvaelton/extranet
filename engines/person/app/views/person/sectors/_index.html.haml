.card
  .card-body.card-header.border-left-yellow
    .card-title 
      Listando (#{@sectors.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'

  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th Nº 
          %th Nome
          %th Código
          %th Setor pai
          %th Responsável
          %th Status
          %th
      %tbody
        - if @sectors.present?
          -@sectors.order(:name).each do |sector|
            %tr{class: "row-sector-#{sector.id}"}
              %td.collapsing= sector.id
              %td= sector.name
              %td= sector.code
              %td= sector.father.name rescue nil
              %td= sector.responsible.name rescue nil
              %td.collapsing= sector.status.status_format
              %td.collapsing
                .dropdown
                  %button.btn.btn-success.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %i.fa.fa-cog
                    %i.ti-angle-down
                  .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                    = link_to "Excluir", sector_path(sector), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
                    = link_to "Editar", edit_sector_path(sector), class: 'dropdown-item', remote: true
          %tfoot
            %tr
              %td.text-center{colspan: 6}
                = pagy_bootstrap_nav(@pagy).html_safe
                
        - else
          %tr
            %td{colspan: 6}
              %i Nenhum tipo de atendimento registrado.