= simple_form_for @sector, remote: true do |f|
  .row  
    .col-md-8
      = f.input :name, placeholder: 'Digite o nom'
    .col-md-4
      = f.input :acron, placeholder: 'Digite o abreviação'
  .row
    .col-md-4
      = f.input :prefex, placeholder: 'Digite o prefixo'
    .col-md-4
      = f.input :father_id,as: :select, collection: Person::Sector.all, include_blank: 'Selecione...'
    .col-md-4
      = f.input :code, placeholder: 'Digite a código'
  .row
    .col-md-6
      = f.input :color, placeholder: 'Digite a cor'
    .col-md-6
      = f.input :status, as: :select, include_blank: 'selecione...'
  .row
    .col-md-12
      = f.input :responsible_id, as: :select, collection: Person::Staff.all, include_blank: 'Selecione...'
  .divider-sm
  .row
    .col-md-12
  = f.button :submit, class: 'btn btn-success'