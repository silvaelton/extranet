.card
  .card-body.card-header.border-left-yellow
    .card-title
      Listando (#{@lawsuits.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'

  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th NÂº
          %th Nome
          %th Status
          %th
      %tbody
        - if @lawsuits.present?
          -@lawsuits.each do |lawsuit|
            %tr{class: "row-type-#{lawsuit.id}"}
              %td.collapsing= lawsuit.id
              %td= lawsuit.name
              %td.collapsing= lawsuit.status.status_format
              %td.collapsing
                .dropdown
                  %button.btn.btn-success.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %i.fa.fa-cog
                    %i.ti-angle-down
                  .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                    = link_to "Excluir", lawsuit_path(lawsuit), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
                    = link_to "Editar", edit_lawsuit_path(lawsuit), class: 'dropdown-item', remote: true
        - else
          %tr
            %td{colspan: 6}
              %i Nenhum registro encontrado.
