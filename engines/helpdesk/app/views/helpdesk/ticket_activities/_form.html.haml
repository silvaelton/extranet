= simple_form_for @ticket.ticket_activities.new, url: ticket_ticket_activities_path(@ticket), remote: true do |f|
  = f.input :content, as: :text, input_html: { rows: 10}
  = f.input :document, as: :file
  = f.submit "Adicionar interação", class: 'btn btn-info btn-block', data: { disable_with: t(:disable_with)}