.card.filter-sidebar
  .card-heading.custom-border-left.bottom
    .card-title 
      Filtro
      = link_to "-", "#", class: "float-right"
  .card-block
    .row
      .col-md-12
        = simple_form_for url_for, method: :get, remote: true do |f|
          %ul
            %li
              = f.input :by_convocation, as: :select, label: "Por convocação", include_blank: t(:include_blank)
            %li
              = f.input :by_situation, as: :select,label: "Por situação", include_blank: t(:include_blank)
            %li
              = f.input :by_cpf, as: :string, label: "Por CPF", input_html: { class: 'cpf'}
            %li
              = f.input :by_program, as: :select, collection: Support::Common::Program.all, label: "Por Lista", include_blank: t(:include_blank)
            %li
              = f.submit "Filtrar", name: nil, class: 'btn btn-success btn-block'
    
  .card-heading.custom-border-left.custom-border-top
    .card-title Operações
  .card-block
    .row
      .col-md-12        
        %ul
          %li
            %span= link_to "Iniciar novo chamado", "#", class: 'filter-nav-item'
          
  .card-heading.custom-border-left.custom-border-top
    .card-title Menu rápido    
  .card-block
    .row
      .col-md-12        
        %ul
          %li
            %span= link_to "Gestão de tipos", "#", class: 'filter-nav-item'
          %li
            %span= link_to "Gestão de categorias", "#", class: 'filter-nav-item'
          %li
            %span= link_to "Gestão de atendentes", "#", class: 'filter-nav-item'