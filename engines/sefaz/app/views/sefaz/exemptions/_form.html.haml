= simple_form_for [@allotment, @exemption], remote: true do |f|
  .row
    .col-md-8
      = f.input :name, input_html: { placeholder: 'Nome' }
    .col-md-4
      = f.input :cpf, input_html: { class: 'cpf' }
  .row
    .col-md-4
      = f.input :city, input_html: { placeholder: 'Cidade' }
    .col-md-8
      = f.input :address, input_html: { placeholder: 'Ex. QD 03 ...' }
  .row
    .col-md-6
      = f.input :realty_number, input_html: { placeholder: 'NÂº IPTU' }
    .col-md-6
      = f.input :realty_value, input_html: { placeholder: 'ex. 10000' }
  %hr
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success'
