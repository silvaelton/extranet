.card
  .card-body.card-header.border-left-yellow
    .card-title
      Listando (#{@request_situations.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'

  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th NÂº
          %th Nome
          %th Status
          %th
      %tbody
        - if @request_situations.present?
          -@request_situations.each do |request_situation|
            - request_situation.presenter do |r|
              %tr
                %td.collapsing= r.id
                %td= r.name
                %td.collapsing= r.status
                %td.collapsing
                  .dropdown
                    %button.btn.btn-success.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                      %i.fa.fa-cog
                      %i.ti-angle-down
                    .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                      = link_to "Excluir", request_situation_path(r), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
                      = link_to "Editar", edit_request_situation_path(r), class: 'dropdown-item', remote: true
        - else
          %tr
            %td{colspan: 6}
              %i Nenhum registro encontrado.
