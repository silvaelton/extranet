.card
  .card-body.card-header.border-left-yellow
    .card-title
      Listando (#{@users.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'
  
  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th ID
          %th Nome
          %th Usuário
          %th Cargo
          %th Setor
          %th Situação
          %th
      %tbody
        - @users.each do |user| 
          %tr
            %td.collapsing= user.id
            %td= user.name
            %td.collapsing= user.username
            %td= user.job_id
            %td= user.sector_id
            %td= user.status.status_format
            %td.collapsing
              .dropdown
                %button.btn.btn-primary.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                  %i.fa.fa-cog
                  %i.ti-angle-down
                .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                  = link_to "Detalhar", user_path(user), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
                  = link_to "Editar", edit_user_path(user), class: 'dropdown-item', remote: true
                  = link_to (user.status ? "Inativar" : "Ativar"), user_path(user), method: :delete, class: 'dropdown-item', remote: true
                  = link_to "Menus", user_user_navs_path(user), class: 'dropdown-item', remote: true
                  = link_to "Permissões", user_user_permissions_path(user), class: 'dropdown-item', remote: true
                  = link_to "Resetar senha", edit_user_path(user), class: 'dropdown-item', remote: true