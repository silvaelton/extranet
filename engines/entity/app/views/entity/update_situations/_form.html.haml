      = f.input :situation_id, collection: Entity::CadastreSituation.status_active,include_blank: 'Selecione...'
    
  %hr.divider
  .row
    .col-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with) }