.card
  .card-body.card-header.border-left-yellow
    .card-title
      Listando (#{@situations.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'
  
  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th Nome
          %th Descrição
          %th Situação
          %th
      %tbody
        - @situations.each do |sit|
          %tr{class: "row-#{sit.id}"}
            %td= sit.name
            %td= sit.description
            %td.collapsing= sit.status.status_format
            %td.collapsing
              .dropdown
                %button.btn.btn-primary.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                  %i.fa.fa-cog
                  %i.ti-angle-down
                .dropdown-menu.dropdown-menu-left{"aria-labelledby" => "dropdownMenuButton"}
                  = link_to "Editar", entity.edit_cadastre_situation_path(sit), remote: true, class: 'dropdown-item'
                  = link_to "Remover", entity.cadastre_situation_path(sit), method: :delete, remote: true, class: 'dropdown-item', data: { confirm: t(:confirm)}
              