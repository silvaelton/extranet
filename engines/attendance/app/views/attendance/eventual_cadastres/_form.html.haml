= simple_form_for @eventual, remote: true do |f|
  
  .row
    .col-8
      = f.input :name
    .col-4
      = f.input :cpf, input_html: { class: 'cpf' }

  .row
    .col-3
      = f.input :born, as: :string, input_html: { class: 'date' }
    .col-3
      = f.input :gender_id, as: :select, collection: Support::Common::Gender.status_active.order(:id), include_blank: false
    .col-3
      = f.input :program_id, as: :select, collection: Candidate::Program.status_active.order(:id), include_blank: t(:include_blank)
    .col-3
      = f.input :convocation_id, as: :select, collection: Candidate::Convocation.status_active.order(:id), include_blank: t(:include_blank)

  .row
    .col-4
      = f.input :password, placeholder: 'Digite a senha'
    .col-4
      = f.input :password_confirmation, placeholder: 'Confirme a senha'
    .col-4
      = f.input :sub_program_id, as: :select, collection: Candidate::Program.status_active.order(:id), include_blank: t(:include_blank)
  .row
    .col-12
      = f.input :observation, as: :text, input_html: { rows: 4}
  %hr.divider
  .row
    .col-12
      = f.button :submit, class: 'btn btn-success', data: { disable_with: t(:disable_with) }
  