- if @document_type.errors.any?
  $("#modal").html("#{escape_javascript(render 'new')}");
  update_js();
- else
  $("#modal").html("#{escape_javascript(render 'layouts/partials/modal_success')}");
  $(".index-content").html("#{escape_javascript(render 'attendance/document_types/index')}");
  $(".row-document-#{@document_type.id}").addClass('table-success');

  update_js();
