.card
  .card-body.card-header.border-left-yellow
    .card-title 
      Listando (#{@document_types.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'

  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th Nº 
          %th Nome
          %th Código
          %th Descrição
          %th Observação
          %th Status
          %th
      %tbody
        - if @document_types.present?
          -@document_types.order(:name).each do |document_type|
            %tr{class: "row-document-#{document_type.id}"}
              %td.collapsing= document_type.id
              %td= document_type.name
              %td= document_type.code
              %td= document_type.description
              %td= document_type.observation
              %td.collapsing= document_type.status.status_format
              %td.collapsing
                .dropdown
                  %button.btn.btn-primary.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %i.fa.fa-cog
                    %i.ti-angle-down
                  .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                    = link_to "Excluir", document_type_path(document_type), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
                    = link_to "Editar", edit_document_type_path(document_type), class: 'dropdown-item', remote: true
          %tfoot
            %tr
              %td.text-center{colspan: 7}
                = pagy_bootstrap_nav(@pagy).html_safe
                
        - else
          %tr
            %td{colspan: 6}
              %i Nenhum tipo de atendimento registrado.