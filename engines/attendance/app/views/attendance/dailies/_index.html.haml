.card
  .card-body.card-header.border-left-yellow
    .card-title 
      Listando (#{@dailies.count}) registro(s)
      .float-right.group-action
        = link_to "Excel", "#", class: 'btn btn-secondary btn-sm'
        = link_to "Imprimir", "#", class: 'btn btn-secondary btn-sm'

  .card-body
    %table.table.table-bordered.table-striped.table-celled
      %thead
        %tr
          %th NÂº 
          %th Nome
          %th Cpf
          %th Atendente
          %th Posto
          %th Categoria
          %th
      %tbody
        - if @dailies.present?
          -@dailies.each do |daily|
            %tr{class: "row-daily-#{daily.id}"}
              %td.collapsing= daily.id
              %td= daily.name
              %td= daily.cpf
              %td= daily.attendant.staff.name rescue nil
              %td= daily.station.name rescue nil
              %td= daily.category.name rescue nil
              %td.collapsing
                .dropdown
                  %button.btn.btn-success.btn-icon.btn-sm.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %i.fa.fa-cog
                    %i.ti-angle-down
                  .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
                    = link_to "Excluir", daily_path(daily), method: :delete, class: 'dropdown-item', data: {confirm: t(:confirm)}, remote: true
                    = link_to "Editar", edit_daily_path(daily), class: 'dropdown-item', remote: true
          %tfoot
            %tr
              %td.text-center{colspan: 6}
                = pagy_bootstrap_nav(@pagy).html_safe
                
        - else
          %tr
            %td{colspan: 6}
              %i Nenhum atendente registrado.