#sidebar
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Filtro
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body
      = simple_form_for url_for, method: :get, remote: true do |f|
        = f.input :by_cpf, as: :string, label: "Por CPF", input_html: { class: 'cpf', name: :by_cpf, value: params[:by_cpf], placeholder: "Informe o nome"}
        .mt-4
        = f.submit "Filtrar", name: nil, class: 'btn btn-primary btn-block'
        = link_to "Limpar", url_for, class: 'btn btn-dark btn-block'
  .divider  
  .card
    .card-body.card-header.border-left-yellow
      .card-title 
        Operações
        = link_to "javascript:void(0)", class: "collapsing-link" do
          %i.fa.fa-minus
    .card-body.card-list
      = link_to "Adicionar cadastro", attendance.new_agenda_reference_category_agenda_reference_path(@reference_category), remote: true, data: { disable_with: t(:disable_with)}
      %hr/
      = link_to "Voltar para listagem", attendance.agenda_reference_categories_path, data: { disable_with: t(:disable_with) }
      = link_to "Gestão de agendas", attendance.agendas_path, data: { disable_with: t(:disable_with) }