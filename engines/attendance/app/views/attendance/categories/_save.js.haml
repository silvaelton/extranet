- if @category.errors.any?
  $("#modal").html("#{escape_javascript(render 'form')}");
  updateJs();
- else
  $("#modal").html("#{escape_javascript(render 'layouts/partials/modal_success')}");
  $(".index-content").html("#{escape_javascript(render 'attendance/categories/index')}");
  $(".row-category-#{@category.id}").addClass('table-success');

  updateJs();
