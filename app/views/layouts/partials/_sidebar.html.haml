.side-nav
  .side-nav-inner
    .side-nav-logo
      %a{:href => "#{pivotal.root_path}"}
        .logo
          = image_tag 'horizontal-logo.png', width: '90%', class: 'horizontal-logo'
          = image_tag 'negativa-marca.png', width: '80%', class: 'mini-logo'
      .mobile-toggle.side-nav-toggle
        %a{:href => ""}
          %i.ti-arrow-circle-left
    %ul.side-nav-menu.scrollable.ps-container.ps-theme-default{"data-ps-id" => "b046f04c-438a-da76-4eee-8f2fb8e075bb"}
      %li.nav-item
        %a.mrg-top-30{:href => "#{pivotal.root_path}"}
          %span.icon-holder
            %i.ei-collaboration
          %span.title Dashboard
      - each_navs.order(:position).each do |nav|
        - if nav.childrens.present?
          %li.nav-item.dropdown
            %a.dropdown-toggle{:href => "javascript:void(0);"}
              %span.icon-holder
                %i{class: "#{nav.icon}"}
              %span.title= nav.label
              %span.arrow
                %i.ti-angle-right
              %ul.dropdown-menu
                - nav.childrens.each do |child|
                  %li
                    %a{:href => "#{child.url}"}= child.label
        - else
          %li.nav-item
            %a{:href => "#{nav.url}"}
              %span.icon-holder
                %i{class: "#{nav.icon}"}
              %span.title= nav.label